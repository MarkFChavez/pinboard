%nav.navbar.navbar-default.navbar-fixed-top{ role: "navigation" }
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{ "data-toggle" => "collapse", "data-target" => "#bs-example-navbar-collapse-1", type: "button" }
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
          
      = link_to "Pinboa.rd", root_path, class: "navbar-brand"

    .collapse.navbar-collapse#bs-example-navbar-collapse-1
      %ul.nav.navbar-nav.navbar-right
        - if signed_in?
          %li.active
            = link_to current_user.full_name, "#"

          %li
            = link_to new_pin_path do
              %i.glyphicon.glyphicon-plus
              New Pin

          %li
            = link_to "Logout", logout_path, method: :delete, "data-confirm" => "Are you sure?"

        - else
          %li.active
            = link_to "Login with Facebook", "/auth/facebook"
